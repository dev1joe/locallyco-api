import { createSelectSchema, createInsertSchema, createUpdateSchema } from "drizzle-zod";
import { z } from "zod"
import { schema } from "src/db/schema"
import xss from "xss";

//: (columnSchema) => columnSchema.transform((item) => xss(item)),

export const placeholderSelectSchema = createSelectSchema(schema.placeholder);
export type PlaceholderSelectSchema = z.infer<typeof placeholderSelectSchema>;

export const placeholderInsertSchema = createInsertSchema(schema.placeholder)
export type PlaceholderInsertSchema = z.infer<typeof placeholderInsertSchema>;

export const placeholderUpdateSchema = createUpdateSchema(schema.placeholder)
export type PlaceholderUpdateSchema = z.infer<typeof placeholderUpdateSchema>;
